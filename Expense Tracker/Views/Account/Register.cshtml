@model RegisterViewModel
@{
    Layout = null;
    ViewData["Title"] = "Registrarse";
}
<!DOCTYPE html>
<html lang="es-MX">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Rastreador de Gastos</title>
    <!-- Link to our shared CSS file -->
    <link rel="stylesheet" href="~/css/login-register.css" />
</head>

<body>
    <div class="auth-container">
        <!-- Image Panel -->
        <div class="auth-image-panel">
            <h1>Rastreador de Gastos</h1>
            <p>Toma el control de tus finanzas. La claridad y tranquilidad empiezan aquí.</p>
        </div>
        <!-- Form Panel -->
        <div class="auth-form-panel">
            <h2>Crea tu Cuenta</h2>
            <p class="subtitle">Comienza a rastrear tus gastos hoy.</p>

            <form asp-action="Register" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group">
                    <label asp-for="FirstName">Nombre</label>
                    <input asp-for="FirstName" class="form-control" placeholder="Ingresa tu nombre" />
                </div>

                <div class="form-group">
                    <label asp-for="Email">Correo Electrónico</label>
                    <input asp-for="Email" class="form-control" placeholder="tu@ejemplo.com" />
                </div>
                <div class="form-group">
                    <label asp-for="Password">Contraseña</label>
                    <input asp-for="Password" class="form-control" placeholder="Elige una contraseña segura" />
                </div>
                <div class="form-group">
                    <label asp-for="ConfirmPassword">Confirmar Contraseña</label>
                    <input asp-for="ConfirmPassword" class="form-control" placeholder="Confirma tu contraseña" />
                </div>
                <button type="submit" class="btn-submit">Crear Cuenta</button>
            </form>
            <div class="auth-link">
                ¿Ya tienes una cuenta? <a asp-controller="Account" asp-action="Login">Iniciar Sesión</a>
            </div>
        </div>
    </div>
</body>
</html>