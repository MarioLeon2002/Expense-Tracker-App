@model LoginViewModel
@{
    Layout = null;
    ViewData["Title"] = "Iniciar Sesión";
}
<!DOCTYPE html>
<html lang="es-MX">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Rastreador de Gastos</title>
    <link rel="stylesheet" href="~/css/login-register.css" />
</head>
<body>
    <div class="auth-container">
        <!-- Image Panel -->
        <div class="auth-image-panel">
            <h1>Rastreador de Gastos</h1>
            <p>Toma el control de tus finanzas. La claridad y tranquilidad empiezan aquí.</p>
        </div>
        <!-- Form Panel -->
        <div class="auth-form-panel">
            <h2>¡Bienvenido de nuevo!</h2>
            <p class="subtitle">Inicia sesión para continuar a tu panel.</p>

            <form asp-action="Login" method="post">
                <!-- This will display any login errors -->
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group">
                    <label asp-for="Email">Correo Electrónico</label>
                    <input asp-for="Email" class="form-control" placeholder="tu@ejemplo.com" />
                </div>
                <div class="form-group">
                    <label asp-for="Password">Contraseña</label>
                    <input asp-for="Password" class="form-control" placeholder="••••••••" />
                </div>
                <button type="submit" class="btn-submit">Iniciar Sesión</button>
            </form>

            <div class="auth-link">
                ¿No tienes una cuenta? <a asp-controller="Account" asp-action="Register">Regístrate</a>
            </div>
        </div>
    </div>
</body>
</html>