@model IEnumerable<Expense_Tracker.Models.Category>

@{
    ViewData["PageTitle"] = "Categorías";
    ViewData["PageActionText"] = "+ Nueva Categoría";
    ViewData["PageActionUrl"] = "/Category/AddOrEdit";
}


<div class="row">
    <div class="col-md-7">
        <div class="widget p-3">
            <table id="categoriesTable" class="table table-dark table-hover" style="width:100%">
                <thead>
                    <tr>
                        <th>Categoría</th>
                        <th>Tipo</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var category in Model)
                    {
                        <tr>
                            <td>@category.TitleWithIcon</td>
                            <td>
                                @if (category.Type == "Income")
                                {
                                    <span class="badge bg-success">Ingreso</span>
                                }
                                else
                                {
                                    <span class="badge bg-danger">Gasto</span>
                                }
                            </td>
                            <td>
                                <div class="d-flex flex-row justify-content-start">
                                    <a class="btn btn-sm no-a-decoration" href="/Category/AddOrEdit/@category.CategoryId">
                                        <i class="fa-solid fa-pen fa-lg"></i>
                                    </a>
                                    <form action="/Category/Delete/@category.CategoryId" method="post">
                                        @Html.AntiForgeryToken()
                                        <button type="submit" class="btn btn-sm btn-link no-a-decoration"
                                                onclick="return confirm('¿Está seguro de que desea eliminar este registro?')">
                                            <i class="fa-solid fa-trash-can fa-lg text-danger"></i>
                                        </button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
    <div class="col-md-5">
        <div class="widget h-100 d-flex justify-content-center align-items-center">
            <i class="fa-solid fa-shapes fa-2xl"></i>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            $('#categoriesTable').DataTable({
                pageLength: 5,
                lengthMenu: [5, 10, 25],
                ordering: true,
                language: {
                    search: "Buscar:",
                    lengthMenu: "Mostrar _MENU_ registros",
                    info: "Mostrando _START_ a _END_ de _TOTAL_ registros",
                    infoEmpty: "Mostrando 0 a 0 de 0 registros",
                    infoFiltered: "(filtrado de _MAX_ registros totales)",
                    paginate: {
                        first: "Primero",
                        last: "Último",
                        next: "Siguiente",
                        previous: "Anterior"
                    },
                    emptyTable: "No hay categorías disponibles",
                    zeroRecords: "No se encontraron registros"
                },
                columnDefs: [
                    { orderable: false, targets: 2 }
                ]
            });
        });
    </script>
}
